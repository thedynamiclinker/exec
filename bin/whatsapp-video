#!/usr/bin/env bash

if [[ -z $1 ]]; then
    echo "usage: $(basename $0) <input-file>"
    exit 1
fi

input="$1"
output="whatsapp_$1"

ffmpeg -i "$input" \
  -c:v libx264 -profile:v baseline -level 3.0 \
  -pix_fmt yuv420p \
  -vf "scale=trunc(iw/2)*2:trunc(ih/2)*2" \
  -r 30 \
  -movflags +faststart \
  -c:a aac -b:a 128k -ac 2 -ar 44100 \
  "$output"
