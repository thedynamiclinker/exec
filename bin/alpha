[[ -z "$1" ]] && usage

while [[ -n "$1" ]]; do
    case "$1" in
        -h|--help)          usage;;
        -l|--list)          shift; list_all_things "$1";;

        i|ipa)              get_ipa_en;;
        r|root)             get_root;;
        g|greek)            get_greek;;
        c|cyrillic)         get_cyrillic;;
        p|phoenician)       get_phoenician;;

        -*)                 usage "Unrecognized option: ${1}";;
        *)                  show_thing "${1}";;
    esac
    shift
done
